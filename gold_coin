#include <stdio.h>

int main(void)
{
	int n = 0, date = 1;
	int userNumber;
	int aToday = 0, aTotal = 0;
	int bToday = 0, bTotal = 0;

	printf("날짜 N일은 입력하시오: ");
	scanf("%d", &userNumber);
	
	while (date <= userNumber)
	{
		if (date == (n * (n + 1) / 2) + 1)
		{
			aToday += 1;
			n += 1;
		}
		if (bToday == 0 | date % 10 == 1)
			bToday += 1;
		aTotal += aToday;
		bTotal += bToday;
		date += 1;
	}

	printf("기사 A가 오늘 받는 금화의 개수 : %d \n", aToday);
	printf("기사 A가 지금까지 받은 금화의 개수 : %d \n", aTotal);
	printf("기사 B가 오늘 받는 금화의 개수 : %d \n", bToday);
	printf("기사 B가 지금까지 받은 금화의 개수 : %d \n", bTotal);

	if (aTotal > bTotal)
		printf("%d일까지는 기사 A가 더 많이 받았습니다. \n", userNumber);
	else if (aTotal < bTotal)
		printf("%d일까지는 기사 B가 더 많이 받았습니다. \n", userNumber);
	else
		printf("%d일까지는 기사 A와 기사 B가 받은 금화의 개수가 같습니다 \n", userNumber);

	return 0;
}
